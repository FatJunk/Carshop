<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Carshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<div>
    <header class="p-3 bg-dark text-white">
    <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Carshop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Главная<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Cars/List">Машины</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Cars/List/sedan">Седаны</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Cars/List/universal">Универсалы</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Cars/List/minivan">Минивэн</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Cars/List/cupe">Купе</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/CarshopCart/">Корзина</a>
                </li>
            </ul>
            <p>г.Ангарск/52 квартал/1 дом</p>
        </div>
    </nav>
    </header>
</div>
    <div class="container mt-5">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

<footer class="container">
    <p>© 2020–2021 CarshopInc., Все права защищены </p>
  </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
