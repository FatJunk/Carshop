@model Order

<div class="row">
    <h3>Оформление заказа</h3>
    <form asp-action="Checkout" method="POST" class="form-horizontal">
        <div class="form-group">
            <label asp-for="name" class="form-control" />
            <div class="col-md-5">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="surrName" class="form-control" />
            <div class="col-md-5">
                <input asp-for="surrName" class="form-control" />
                <span asp-validation-for="surrName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="form-control" />
            <div class="col-md-5">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="form-control" />
            <div class="col-md-5">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-control" />
            <div class="col-md-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Завершить оформление заказа" />
    </form>
</div>